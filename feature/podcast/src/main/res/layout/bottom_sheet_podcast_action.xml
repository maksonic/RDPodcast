<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="vertical">

    <include layout="@layout/indicator_bottom_sheet" />
    <LinearLayout
        android:id="@+id/podcastItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_item_podcast"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPodcast"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:srcCompat="@drawable/podcast_image" />

        <TextView
            android:id="@+id/txtPodcastName"
            style="@style/TextView.Header.RDTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginBottom="@dimen/padding_16dp"
            android:gravity="center"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:orientation="horizontal"
            android:singleLine="true"
            android:text="Название подкаста, которое невозможно уместить ровно в одну линию"
            tools:text="This is very long podcast name" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/listDivider00"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:background="@color/color_secondary" />
    <TextView
        style="@style/TextView.ModalItem.Title.RDTheme"
        android:id="@+id/btnPlayPodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_play"
        android:drawablePadding="@dimen/padding_16dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_round_play_circle"
        />

 <com.google.android.material.divider.MaterialDivider
        android:id="@+id/listDivider0"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:background="@color/color_secondary" />
    <TextView
        style="@style/TextView.ModalItem.Title.RDTheme"
        android:id="@+id/btnFavoritePodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_add_favorite"
        android:drawablePadding="@dimen/padding_16dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_favorite_border"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/listDivider1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:background="@color/color_secondary" />
    <TextView
        style="@style/TextView.ModalItem.Title.RDTheme"
        android:id="@+id/btnDownloadPodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_download"
        android:drawablePadding="@dimen/padding_16dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_download" />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/listDivider2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:background="@color/color_secondary" />
    <TextView
        style="@style/TextView.ModalItem.Title.RDTheme"
        android:id="@+id/btnYoutubePodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_youtube"
        android:drawablePadding="@dimen/padding_16dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_youtube_play" />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/listDivider3"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:background="@color/color_secondary" />
    <TextView
        style="@style/TextView.ModalItem.Title.RDTheme"
        android:id="@+id/btnSharePodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_24dp"
        android:text="@string/item_share"
        android:drawablePadding="@dimen/padding_16dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_send" />
</LinearLayout>