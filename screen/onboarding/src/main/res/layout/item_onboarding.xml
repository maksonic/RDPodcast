<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/padding_16dp"
        android:layout_marginEnd="@dimen/padding_16dp"
        android:layout_weight="1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/TextView.Onboarding.Title.RDTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        style="@style/TextView.Onboarding.Description.RDTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_24dp"
        android:layout_marginEnd="@dimen/padding_24dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        tools:text="Onboarding description" />
</LinearLayout>