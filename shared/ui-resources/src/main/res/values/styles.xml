<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Btn.Navigation.RDTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="tint">@color/color_primary</item>
    </style>

    <style name="Btn.Primary.RDTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="enforceMaterialTheme">true</item>
        <item name="rippleColor">@color/color_primary_variant</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="cornerRadius">@dimen/corner_radius_8dp</item>
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>